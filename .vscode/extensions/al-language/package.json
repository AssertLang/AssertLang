{
  "name": "al-language",
  "displayName": "AL Language Support",
  "description": "Syntax highlighting and icons for AL (AssertLang) language",
  "version": "2.0.0",
  "publisher": "assertlang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "al",
        "aliases": ["AL", "AssertLang"],
        "extensions": [".al"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/al-icon.svg",
          "dark": "./icons/al-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "al",
        "scopeName": "source.al",
        "path": "./syntaxes/al.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "al-icons",
        "label": "AL Icons",
        "path": "./iconTheme.json"
      }
    ]
  }
}
