#!/usr/bin/env python3
"""
Promptware CLI launcher script.

This script launches the Promptware CLI from anywhere.
"""

import sys
from pathlib import Path

# Add Promptware directory to path
promptware_root = Path(__file__).parent.parent
sys.path.insert(0, str(promptware_root))

from promptware.cli import main

if __name__ == '__main__':
    sys.exit(main())
