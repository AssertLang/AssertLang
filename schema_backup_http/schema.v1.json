{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://promptware.dev/schemas/tools/http.v1.json",
  "type": "object",
  "properties": {
    "method": {
      "type": "string",
      "enum": [
        "GET",
        "POST",
        "PUT",
        "PATCH",
        "DELETE"
      ]
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "body": {
      "type": [
        "string",
        "null"
      ]
    },
    "timeout_sec": {
      "type": "integer",
      "minimum": 1,
      "maximum": 120
    }
  },
  "required": [
    "method",
    "url"
  ],
  "additionalProperties": false
}