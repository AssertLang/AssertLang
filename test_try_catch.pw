// This tests the new standardized try/catch syntax

function safe_divide(a: int, b: int) -> int {
    try {
        if (b == 0) {
            throw "Division by zero";
        }
        return a / b;
    } catch (error) {
        return 0;
    }
}

function complex_error_handling(x: int) -> string {
    try {
        if (x < 0) {
            throw "Negative value not allowed";
        }
        if (x == 0) {
            throw "Zero is invalid";
        }
        return "Valid: " + x;
    } catch (e) {
        return "Error: " + e;
    } finally {
        // Cleanup code here
    }
}

function nested_try_catch(value: int) -> bool {
    try {
        try {
            if (value > 100) {
                throw "Value too large";
            }
            return true;
        } catch (inner) {
            throw "Inner error: " + inner;
        }
    } catch (outer) {
        return false;
    }
}
