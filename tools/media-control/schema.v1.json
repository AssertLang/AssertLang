{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/media-control.v1.json",
  "type": "object",
  "properties": {
    "op": {
      "type": "string",
      "enum": [
        "play",
        "pause",
        "stop",
        "volume"
      ]
    },
    "target": {
      "type": "string",
      "enum": [
        "device",
        "session"
      ]
    },
    "value": {
      "type": [
        "number",
        "null"
      ]
    }
  },
  "required": [
    "op",
    "target"
  ],
  "additionalProperties": false
}