{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/api-auth.v1.json",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "apiKey",
        "jwt"
      ]
    },
    "token": {
      "type": "string"
    },
    "header": {
      "type": "string",
      "default": "Authorization"
    },
    "prefix": {
      "type": "string",
      "default": "Bearer "
    }
  },
  "required": [
    "type",
    "token"
  ],
  "additionalProperties": false
}