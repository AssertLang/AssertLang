{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://promptware.dev/schemas/tools/plugin-manager.v1.json",
  "type": "object",
  "properties": {
    "op": {
      "type": "string",
      "enum": [
        "install",
        "enable",
        "disable",
        "remove",
        "list"
      ]
    },
    "name": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "op"
  ],
  "additionalProperties": false
}